<Window x:Class="ClarissaJoyFlores.WeatherPanel2.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClarissaJoyFlores.WeatherPanel2.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="636.034" Width="800">
    <Grid Margin="0,0,37,7">
        <Grid.RowDefinitions>
            <RowDefinition Height="427*"/>
            <RowDefinition Height="172*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_GetWeather" Content="Get Weather" Grid.Column="1" HorizontalAlignment="Left" Margin="38,58,0,0" VerticalAlignment="Top" Width="200" Height="58" Grid.Row="1" Click="Btn_GetWeather_Click"/>
        <Label x:Name="lblSummary" Content="Summary:" HorizontalAlignment="Left" Margin="42,36,0,0" VerticalAlignment="Top" Width="128" Height="36" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="24"/>
        <Label x:Name="lblWindSpeed" Content="Wind Speed:" HorizontalAlignment="Left" Margin="42,72,0,0" VerticalAlignment="Top" Width="148" Height="42" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="24"/>
        <Label x:Name="lblTemperature" Content="Temperature:" HorizontalAlignment="Left" Margin="42,104,0,0" VerticalAlignment="Top" Width="168" Height="43" FontFamily="Trebuchet MS" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="lblPressure" Content="Pressure:" HorizontalAlignment="Left" Margin="42,136,0,0" VerticalAlignment="Top" Width="148" Height="44" FontSize="24" FontFamily="Trebuchet MS" FontWeight="Bold"/>
        <Label x:Name="lblHumidity" Content="Humidity:" HorizontalAlignment="Left" Margin="42,172,0,0" VerticalAlignment="Top" Width="128" Height="45" FontFamily="Trebuchet MS" FontSize="24" FontWeight="Bold"/>
        <Image x:Name="imgWeather" Grid.Column="1" HorizontalAlignment="Left" Height="175" Margin="58,25,0,0" VerticalAlignment="Top" Width="212"/>
        <Label x:Name="lblIcon" Content="Icon:" HorizontalAlignment="Left" Margin="42,213,0,0" VerticalAlignment="Top" Width="128" Height="45" FontFamily="Trebuchet MS" FontSize="24" FontWeight="Bold"/>

    </Grid>
</Window>
